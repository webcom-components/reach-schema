{
  "id": "Invite",
  "$schema": "https://webcom-components.github.io/reach-schema/draft-00/Invite.json",
  "properties": {
    "from": {
      "description": "Name of the sender path in */users*",
      "type": "string"
    },
    "roomId": {
      "type": "string"
    },
    "status": {
      "enum": [
        "ONGOING",
        "ACCEPTED",
        "REJECTED",
        "CANCELED"
      ]
    },
    ".creation": {
      "description": "The invitation creation timestamp",
      "type": "number"
    },
    ".end": {
      "description": "The invitation rejection/cancelation timestamp",
      "type": "number"
    }
  },
  "required": [
    "from",
    "roomId"
  ]
}