{
  "id": "Room",
  "$schema": "https://webcom-components.github.io/reach-schema/draft-00/Room.json",
  "properties": {
    "meta": {
      "description": "The Room metadata.",
      "type": "object",
      "properties": {
        "name": {
          "description": "Display name of the room. If not unique, warn or increment ?",
          "type": "string"
        },
        "owner": {
          "description": "Name of the owner path in */users*",
          "type": "string"
        },
        "status": {
          "enum": [
            "OPENED",
            "CLOSED"
          ]
        },
        "_created": {
          "description": "The room creation timestamp",
          "type": "number"
        },
        "_closed": {
          "description": "The room close timestamp",
          "type": "number"
        }
      }
    },
    "participants": {
      "description": "List of the room participants",
      "type": "array",
      "items": {"$ref": "Participant.json"}
    },
    "streams": {
      "description": "List of the published streams",
      "type": "array",
      "items": {"$ref": "Stream.json"}
    },
    "messages": {
      "description": "List of the instant messages",
      "type": "array",
      "items": {"$ref": "Message.json"}
    }
  },
  "required": [
    "name",
    "owner",
    "status"
  ]
}