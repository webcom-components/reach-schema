{
  "id": "PeerConnectionDevice",
  "$schema": "https://webcom-components.github.io/reach-schema/draft-00/PeerConnectionDevice.json",
  "description": "The SDP exchange for a device. (/_webrtc/**$user1DeviceId**-**$user2DeviceId**/**$peerCoId**/**$deviceId**/).",
  "properties": {
    "answer": {
      "description": "Raw SDP answer",
      "type": "string"
    },
    "offer": {
      "description": "Raw SDP offer",
      "type": "string"
    },
    "medias": {
      "description": "List of media ids. (If more than one flux by PeerConnection).",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ice": {
      "type": "array",
      "items": {"$ref": "ICECandidate.json"}
    }
  }
}